{% extends 'baseUser.html.twig'  %}
{% block body %}
    <div style="display:flex;align-items:center;justify-content:center;margin-top: 70px;padding:10px">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add Reclamation</h5>

                <!-- General Form Elements -->
                {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                <label for="inputText" class="col-sm-4 col-form-label">Type </label>
                <div class="col-sm-10">
                    {{form_widget(f.typeRec,{'attr':{'class':'form-control'}})}}
                </div>
                {{form_errors(f.typeRec,{'attr':{'class':'text-danger'}})}}

                <label for="inputText" class="col-sm-6 col-form-label">Description </label>
                <div class="col-sm-10">
                    {{form_widget(f.descriptionRec,{'attr':{'class':'form-control'}})}}
                </div>
                {{form_errors(f.descriptionRec,{'attr':{'class':'text-danger'}})}}
                <label for="inputText" class="col-sm-4 col-form-label">statut </label>
                <div class="col-sm-10">
                    {{form_widget(f.statutRec,{'attr':{'class':'form-control'}})}}
                </div>
                <br>
                <div class="col-sm-10">
                    {{form_widget(f.Submit,{'attr':{'class':'btn btn-primary'}})}}
                </div>

                {{ form_end (f) }}
                <!-- End General Form Elements -->

            </div>
        </div>

    </div>
{% endblock %}